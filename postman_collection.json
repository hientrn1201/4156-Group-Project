{
  "info": {
    "name": "Endpoint check",
    "description": "All endpoints checks in Controllers",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "documentId",
      "value": "1"
    },
    {
      "key": "searchText",
      "value": "machine learning"
    }
  ],
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "welcome(GET /api)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Documents",
      "item": [
        {
          "name": "Upload Document (POST /api/v1/documents)",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8080/api/v1/documents",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "documents"
              ]
            }
          }
        },
        {
          "name": "List ddocuments (GET /api/v1/documents)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api/v1/documents",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "documents"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const arr = pm.response.json();",
                  "  if (Array.isArray(arr) && arr.length) {",
                  "    const id = arr[0].id || arr[0].documentId;",
                  "    if (id) pm.collectionVariables.set('documentId', String(id));",
                  "  }",
                  "} catch(e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Document by the ID(GET /api/v1/documents/{id})",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api/v1/documents/{{documentId}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "documents",
                "{{documentId}}"
              ]
            }
          }
        },
